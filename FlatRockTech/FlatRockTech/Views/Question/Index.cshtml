@model IEnumerable<FlatRockTech_Models.Models.Question>

@{
    ViewData["Title"] = "Index";
}

<h1>Quotes</h1>

<p>
    <a class="btn btn-primary text-white" asp-action="Upsert" asp-controller="Question">Create New</a>
</p>
<table class="table table-striped border">
    <thead>
        <tr>
            <th>
                @*@Html.DisplayNameFor(model => model.Quote)*@
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Quote)
            </td>
            <td>
                <a class="btn btn-primary text-white" asp-action="Upsert" asp-route-id="@item.Question_Id">Edit</a>
                @*<a asp-action="Details" asp-route-id="@item.Question_Id">Details</a> |*@
                <a class="btn btn-danger text-white" asp-action="Delete" asp-route-id="@item.Question_Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
